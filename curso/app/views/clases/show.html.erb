<h1>Perfil clase</h1>

<p>
  <strong>Nombre:</strong>
  <%= @clase.nombre %>
</p>
 
<p>
  <strong>Periodo:</strong>
  <%= @clase.periodo %>
</p>
    
<p>
  <strong>Profesor:</strong>
  <%= @clase.profesor.nombre %>
</p>
    
<h2>Foro</h2>
<% @clase.comentarios.each do |comentario| %>
  <p>
    <strong>Comentario:</strong>
    <%= comentario.texto %>
  </p>
<% end %>
 
<h2>AÃ±adir un comentario:</h2>
<%= form_with(model: [ @clase, @clase.comentarios.build ], local: true) do |form| %>
  <p>
    <%= form.label :texto %><br>
    <%= form.text_area :texto %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
 
